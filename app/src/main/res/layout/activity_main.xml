<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView android:text="@string/rojo"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:textSize="@dimen/sizefont"
        android:background="@color/rojo"
        android:id="@+id/txt_cambiocolor"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RadioButton android:id="@+id/r_rojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rojo"
            android:onClick="onRBClicked"
            android:layout_marginTop="20dp"  />

        <RadioButton android:id="@+id/r_amarillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amarillo"
            android:onClick="onRBClicked"
            android:layout_marginTop="0dp"
            />
        <RadioButton android:id="@+id/r_azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/azul"
            android:onClick="onRBClicked"
            android:layout_marginTop="0dp"
            />

    </RadioGroup>


    <CheckBox android:id="@+id/cb_rojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rojo"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/cb_amarillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amarillo"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/cb_azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/azul"
        android:onClick="onCheckboxClicked"/>

</LinearLayout>
